<div class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Title</label>
        <textarea class="form-control form-control-sm" style="resize: none;" type="text" name="title" maxlength="128" required><%= post.title %></textarea>
    </div>
    <div class="col-md-6">
        <label class="form-label">Description</label>
        <textarea class="form-control form-control-sm" style="resize: none;" type="text" name="description" maxlength="256"><%= post.description %></textarea>
    </div>
    <div class="col-12">
        <label class="form-label">Text (supports markdown-it)</label>
        <textarea onchange="showPreview()" class="form-control form-control-sm" type="text" name="markdown" maxlength="65536"><%= post.markdown %></textarea>
    </div>
    <div class="col-12">
        <label class="form-label">Tags</label>
        <input class="form-control form-control-sm" type="text" name="tags" pattern="^[a-z0-9_\-\s]{0,63}$" title="Enter characters from a-z, 0-9, - or _." maxlength="64" placeholder="Enter tags separated by one space" value="<%= post.tags %>">
    </div>
    <label class="form-label">Banner (jpeg or png, max. 2MB)</label>
    <input class="filepond" type="file" name="banner">
</div>